    <import resource="spring-cache.xml"/>

    <context:component-scan base-package="ru.javawebinar.**.service"/>
    <bean id="stringToLocalTimeConverter" class="ru.javawebinar.topjava.util.StringToLocalTimeConverter"/>
    <bean id="stringToLocalDateConverter" class="ru.javawebinar.topjava.util.StringToLocalDateConverter"/>

    <bean id="conversionService" class="org.springframework.context.support.ConversionServiceFactoryBean">
        <property name="converters">
            <set>
                <ref bean="stringToLocalDateConverter"/>
                <ref bean="stringToLocalTimeConverter"/>
            </set>
        </property>
    </bean>
</beans>